<!DOCTYPE html>
<html>
<head>
	<%- include('../../partials/std-header'); %>
	<title>Demo Electricity Meter Application</title>
	<script type="module"  src="/js/static/electricitymeter/electricitymeter-main.js"></script>
	<style type="text/css">
	/*	.label {
				color: #FFF;
				font-family: sans-serif;
				padding: 2px;
				background: rgba( 0, 0, 0, .6 );
			} */
		.label {
		    height: 40px;
		    width: 40px;
		    line-height: 36px;
		    font-size: 1.2em;
		    border-radius: 50%;
		    background-color: rgba(20,20,20,0.7);
		    text-align: center;
		    border: rgb(128,128,128);
		    cursor: pointer;
		    box-shadow: 0 3px 5px -1px rgb(0 0 0 / 20%), 0 6px 10px 0 rgb(0 0 0 / 14%), 0 1px 18px 0 rgb(0 0 0 / 12%);
		    border-width: 2px;
		    border-style: outset
		}
		.label:hover {
		    color: yellow;

		}
		.switch-offstate{
			color: red;
		}
		.switch-onstate{
			color: green;
		}

		#powermeter{    
		    left: 20px;
		    width: 360px;
		}
		#consumption{    
		    left: 400px;
		    width: 480px;
		}
		.meters {
			position: absolute;
		    font-size: 2.5em;
		    color: #737373;
		    bottom: 10px;
		    background-color: rgba(255,255,255,0.6);
		    border-style: solid;
		    border-color: rgba(100,100,100,0.8);
		    padding: 4px;
		    border-width: thin;
		    border-radius: 10px;
		    z-index: 100;
		}


	</style>

</head>
<body>
	<div id='stars'></div>
	<div class="headline">
		<img alt="sierra logo" src="/pic/static/sierra-logo-h_whitetext.png" />
		<h1 class="headline-text">Demo Application: Electricity Meter</h1>
		
		<button class="ui circular terminal icon button headline-button" id="btn-ctrl-window">
			<i class="terminal icon"></i>
		</button>
		<button class="ui circular icon button headline-button" id="btn-code-window">
			<i class="fa-code icon"></i>
		</button>
	</div>
	<canvas id="mainCanvas"></canvas>

	<%- include('../../partials/info-overlay'); %>

	<div id="progressbar"></div>
	<div id="powermeter" class="meters">Current Power: --W</div>
	<div id="consumption" class="meters">Consumption: --kWh</div>
	<%- include('../../partials/footer'); %>


	<div class="ui large modal" id="script-code-modal" style="border-radius: .28571429rem; height: 90%;">
		<i class="close icon" style="font-family: 'Icons'!important;"></i>
		<div class="content" style=" height: 95%; border-top-left-radius: 4px; border-top-right-radius: 4px;">
			<div id="jsoneditor" style="width: 100%; height: 100%;"></div>
		</div>
		<div class="actions" style="border-top: 1px solid rgba(34,36,38,.15); border-radius: 0.285714rem;">
			<div class="ui negative button centered">Cancel</div>
			<div class="ui positive right labeled icon button" style="font-family: Roboto, Arial, sans-serif !important; background-color: #21ba45;" id="btn-script-ok">
				OK
				<i class="checkmark icon" style="top: -4px; background-color: rgba(0,0,0,.05);"></i>
			</div>
		</div>
	</div>

</body>
</html>